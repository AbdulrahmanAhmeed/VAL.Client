@page "/reports"
@attribute [Authorize]
@using VAL.Client.DTOs
@using VAL.Client.Services
@inject IReportService ReportService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IScreenLoadLogService ScreenLoadLogService

<PageTitle>Reports</PageTitle>

<div class="px-4 sm:px-6 lg:px-8 py-6">
    <!-- Header Section -->
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-slate-900 tracking-tight">Reports</h1>
            <p class="mt-2 text-sm text-slate-700">List of available reports to run or download.</p>
        </div>
        <div class="mt-4 sm:mt-0">
            <!-- Optional: Add Create Report button if needed later -->
        </div>
    </div>

    <!-- Toolbar -->
    <div class="mb-6 bg-white rounded-xl shadow-sm border border-slate-200 p-4">
        <div class="flex flex-wrap items-center gap-3">
            <!-- Search -->
            <div class="flex-1 min-w-[200px]">
                <div class="relative">
                    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                        <i class="fas fa-search text-slate-400 text-sm"></i>
                    </div>
                    <input type="text" 
                           @bind="searchTerm" 
                           @bind:event="oninput"
                           placeholder="Search reports..." 
                           class="block w-full rounded-lg border-slate-300 pl-10 pr-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" />
                </div>
            </div>
        </div>
    </div>

    <!-- Data Grid -->
    <div class="bg-white rounded-xl shadow-lg shadow-slate-200/60 border border-slate-100 overflow-hidden">
        @if (loading)
        {
            <div class="flex items-center justify-center py-12">
                <div class="text-center">
                    <svg class="animate-spin h-10 w-10 text-indigo-600 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <p class="text-sm text-slate-500">Loading reports...</p>
                </div>
            </div>
        }
        else if (errorMessage != null)
        {
            <div class="p-8">
                <div class="rounded-xl bg-red-50 border border-red-100 p-4 flex items-start gap-3">
                    <i class="fas fa-exclamation-circle text-red-400 text-xl mt-0.5"></i>
                    <div>
                        <h3 class="text-sm font-medium text-red-800">Error loading data</h3>
                        <p class="text-sm text-red-700 mt-1">@errorMessage</p>
                    </div>
                </div>
            </div>
        }
        else if (!FilteredReports.Any())
        {
            <div class="text-center py-12">
                <i class="fas fa-file-alt text-slate-300 text-5xl mb-4"></i>
                <h3 class="text-sm font-medium text-slate-900">No reports found</h3>
                <p class="mt-1 text-sm text-slate-500">No reports match your search criteria.</p>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-slate-50">
                        <tr>
                            <th scope="col" @onclick='() => SortTable("ShortName")' class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-200 transition-colors select-none">
                                <div class="flex items-center gap-1">
                                    Short Name
                                    @if (currentSortColumn == "ShortName")
                                    {
                                        <i class="fas @(isAscending ? "fa-sort-up" : "fa-sort-down") text-indigo-500"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-slate-300"></i>
                                    }
                                </div>
                            </th>
                            <th scope="col" @onclick='() => SortTable("LongName")' class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-200 transition-colors select-none">
                                <div class="flex items-center gap-1">
                                    Long Name
                                    @if (currentSortColumn == "LongName")
                                    {
                                        <i class="fas @(isAscending ? "fa-sort-up" : "fa-sort-down") text-indigo-500"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-slate-300"></i>
                                    }
                                </div>
                            </th>
                            <th scope="col" @onclick='() => SortTable("Status")' class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-200 transition-colors select-none">
                                <div class="flex items-center gap-1">
                                    Status
                                    @if (currentSortColumn == "Status")
                                    {
                                        <i class="fas @(isAscending ? "fa-sort-up" : "fa-sort-down") text-indigo-500"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-slate-300"></i>
                                    }
                                </div>
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-semibold text-slate-700 uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-slate-200">
                        @foreach (var item in FilteredReports)
                        {
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-slate-900">@item.ReportShortName</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-slate-900">@item.ReportLongName</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (item.ReportActive)
                                    {
                                        <span class="inline-flex items-center gap-1.5 rounded-full bg-emerald-100 px-3 py-1 text-xs font-medium text-emerald-700">
                                            <span class="h-1.5 w-1.5 rounded-full bg-emerald-600"></span>
                                            Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1.5 rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-700">
                                            <span class="h-1.5 w-1.5 rounded-full bg-slate-600"></span>
                                            Inactive
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end gap-2">
                                        <button @onclick="() => RunReport(item)" 
                                                title="Run Report"
                                                class="text-indigo-600 hover:text-indigo-900 transition-colors p-2 hover:bg-indigo-50 rounded-lg flex items-center gap-2">
                                            <i class="fas fa-play"></i>
                                            <span class="hidden sm:inline">Run</span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<ReportDto> reports = new();
    private bool loading = true;
    private string? errorMessage;
    private string searchTerm = string.Empty;

    // Sorting state
    private string currentSortColumn = "ShortName";
    private bool isAscending = true;

    protected override async Task OnInitializedAsync()
    {
        // Log screen load
        await ScreenLoadLogService.LogScreenLoadAsync("Reports", NavigationManager.Uri);
        
        await LoadReports();
    }

    private async Task LoadReports()
    {
        try
        {
            loading = true;
            errorMessage = null;
            reports = await ReportService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading reports: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private IEnumerable<ReportDto> FilteredReports
    {
        get
        {
            var filtered = reports.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var search = searchTerm.ToLower();
                filtered = filtered.Where(r =>
                    r.ReportShortName.ToLower().Contains(search) ||
                    r.ReportLongName.ToLower().Contains(search)
                );
            }

            // Apply Sort
            return currentSortColumn switch
            {
                "ShortName" => isAscending 
                    ? filtered.OrderBy(r => r.ReportShortName) 
                    : filtered.OrderByDescending(r => r.ReportShortName),
                "LongName" => isAscending 
                    ? filtered.OrderBy(r => r.ReportLongName) 
                    : filtered.OrderByDescending(r => r.ReportLongName),
                "Status" => isAscending 
                    ? filtered.OrderBy(r => r.ReportActive) 
                    : filtered.OrderByDescending(r => r.ReportActive),
                _ => filtered
            };
        }
    }

    private void SortTable(string columnName)
    {
        if (currentSortColumn == columnName)
        {
            isAscending = !isAscending;
        }
        else
        {
            currentSortColumn = columnName;
            isAscending = true;
        }
    }

    private async Task RunReport(ReportDto report)
    {
        try
        {
            if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to run report '{report.ReportShortName}'?"))
            {
                await ReportService.RunReportAsync(report.ReportGuid);
                await JSRuntime.InvokeVoidAsync("alert", $"Report '{report.ReportShortName}' executed successfully.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error running report: {ex.Message}");
        }
    }
}
