@inject VAL.Client.Services.IAuthService AuthService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<div class="flex flex-col h-full bg-gradient-to-b from-slate-900 via-indigo-950 to-slate-900 min-h-screen">
    <!-- Logo/Brand Section -->
    <div class="flex items-center justify-center h-20 px-6 border-b border-indigo-500/20">
        <div class="flex items-center gap-3">
            <div
                class="w-11 h-11 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg shadow-indigo-500/30">
                <i class="fas fa-cube text-white text-xl"></i>
            </div>
            <span class="font-bold text-2xl text-white tracking-tight">VBL System</span>
        </div>
    </div>



    <!-- Navigation Links -->
    <nav class="flex-1 px-4 py-6 overflow-y-auto">
        <!-- Main Navigation Label -->
        <p class="px-3 text-xs font-semibold text-indigo-400/70 uppercase tracking-wider mb-3">Main Menu</p>

        <!-- Navigation Items - Using flex-col for vertical stacking -->
        <div class="flex flex-col space-y-1">
            <NavLink
                class="group flex items-center gap-3 px-4 py-3 text-sm font-medium text-indigo-200 rounded-xl transition-all duration-300 hover:bg-white/10 hover:text-white hover:translate-x-1 hover:shadow-lg hover:shadow-indigo-500/10"
                href="" Match="NavLinkMatch.All"
                ActiveClass="bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg shadow-indigo-500/25 hover:translate-x-0">
                <div
                    class="w-9 h-9 rounded-lg bg-indigo-500/20 flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors">
                    <i class="fas fa-home text-indigo-400 group-hover:text-indigo-300 transition-colors"></i>
                </div>
                <span>Dashboard</span>
            </NavLink>

            <NavLink
                class="group flex items-center gap-3 px-4 py-3 text-sm font-medium text-indigo-200 rounded-xl transition-all duration-300 hover:bg-white/10 hover:text-white hover:translate-x-1 hover:shadow-lg hover:shadow-indigo-500/10"
                href="dataobjects"
                ActiveClass="bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg shadow-indigo-500/25 hover:translate-x-0">
                <div
                    class="w-9 h-9 rounded-lg bg-indigo-500/20 flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors">
                    <i class="fas fa-database text-indigo-400 group-hover:text-indigo-300 transition-colors"></i>
                </div>
                <span>Data Objects</span>
            </NavLink>

            <NavLink
                class="group flex items-center gap-3 px-4 py-3 text-sm font-medium text-indigo-200 rounded-xl transition-all duration-300 hover:bg-white/10 hover:text-white hover:translate-x-1 hover:shadow-lg hover:shadow-indigo-500/10"
                href="dataobjectscolumns"
                ActiveClass="bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg shadow-indigo-500/25 hover:translate-x-0">
                <div
                    class="w-9 h-9 rounded-lg bg-indigo-500/20 flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors">
                    <i class="fas fa-columns text-indigo-400 group-hover:text-indigo-300 transition-colors"></i>
                </div>
                <span>Data Object Columns</span>
            </NavLink>

            <NavLink
                class="group flex items-center gap-3 px-4 py-3 text-sm font-medium text-indigo-200 rounded-xl transition-all duration-300 hover:bg-white/10 hover:text-white hover:translate-x-1 hover:shadow-lg hover:shadow-indigo-500/10"
                href="reports"
                ActiveClass="bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg shadow-indigo-500/25 hover:translate-x-0">
                <div
                    class="w-9 h-9 rounded-lg bg-indigo-500/20 flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors">
                    <i class="fas fa-file-alt text-indigo-400 group-hover:text-indigo-300 transition-colors"></i>
                </div>
                <span>Reports</span>
            </NavLink>

            <NavLink
                class="group flex items-center gap-3 px-4 py-3 text-sm font-medium text-indigo-200 rounded-xl transition-all duration-300 hover:bg-white/10 hover:text-white hover:translate-x-1 hover:shadow-lg hover:shadow-indigo-500/10"
                href="legacysystems"
                ActiveClass="bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg shadow-indigo-500/25 hover:translate-x-0">
                <div
                    class="w-9 h-9 rounded-lg bg-indigo-500/20 flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors">
                    <i class="fas fa-server text-indigo-400 group-hover:text-indigo-300 transition-colors"></i>
                </div>
                <span>Legacy Systems</span>
            </NavLink>

            <NavLink
                class="group flex items-center gap-3 px-4 py-3 text-sm font-medium text-indigo-200 rounded-xl transition-all duration-300 hover:bg-white/10 hover:text-white hover:translate-x-1 hover:shadow-lg hover:shadow-indigo-500/10"
                href="aboutus"
                ActiveClass="bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg shadow-indigo-500/25 hover:translate-x-0">
                <div
                    class="w-9 h-9 rounded-lg bg-indigo-500/20 flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors">
                    <i class="fas fa-info-circle text-indigo-400 group-hover:text-indigo-300 transition-colors"></i>
                </div>
                <span>About Us</span>
            </NavLink>

            <NavLink
                class="group flex items-center gap-3 px-4 py-3 text-sm font-medium text-indigo-200 rounded-xl transition-all duration-300 hover:bg-white/10 hover:text-white hover:translate-x-1 hover:shadow-lg hover:shadow-indigo-500/10"
                href="contactus"
                ActiveClass="bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg shadow-indigo-500/25 hover:translate-x-0">
                <div
                    class="w-9 h-9 rounded-lg bg-indigo-500/20 flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors">
                    <i class="fas fa-headset text-indigo-400 group-hover:text-indigo-300 transition-colors"></i>
                </div>
                <span>Contact Us</span>
            </NavLink>
        </div>

        <!-- Divider -->
        <div class="my-6">
            <div class="border-t border-indigo-500/20"></div>
        </div>

        <!-- Settings Section -->
        <div>
            <p class="px-3 text-xs font-semibold text-indigo-400/70 uppercase tracking-wider mb-3">Settings</p>

            <div class="flex flex-col space-y-1">
                <NavLink
                    class="group flex items-center gap-3 px-4 py-3 text-sm font-medium text-indigo-200 rounded-xl transition-all duration-300 hover:bg-white/10 hover:text-white hover:translate-x-1"
                    href="settings"
                    ActiveClass="bg-gradient-to-r from-indigo-600 to-purple-600 text-white shadow-lg shadow-indigo-500/25 hover:translate-x-0">
                    <div
                        class="w-9 h-9 rounded-lg bg-indigo-500/20 flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors">
                        <i class="fas fa-cog text-indigo-400 group-hover:text-indigo-300 transition-colors"></i>
                    </div>
                    <span>Settings</span>
                </NavLink>

                <AuthorizeView>
                    <Authorized>
                        <button @onclick="Logout"
                            class="group flex items-center gap-3 px-4 py-3 text-sm font-medium text-red-300 rounded-xl transition-all duration-300 hover:bg-red-500/20 hover:text-red-200 hover:translate-x-1 w-full text-left">
                            <div
                                class="w-9 h-9 rounded-lg bg-red-500/20 flex items-center justify-center group-hover:bg-red-500/30 transition-colors">
                                <i
                                    class="fas fa-sign-out-alt text-red-400 group-hover:text-red-300 transition-colors"></i>
                            </div>
                            <span>Logout</span>
                        </button>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </nav>

    <!-- Footer -->
    <div class="px-4 py-4 border-t border-indigo-500/20">
        <NavLink href="systemstatus" class="flex items-center justify-center gap-2 hover:opacity-80 transition-opacity">
            <div class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></div>
            <p class="text-xs text-indigo-400/70">System Online</p>
        </NavLink>
        <p class="text-xs text-indigo-500/50 text-center mt-2">© 2025 VBL System v1.0 (1st Dec 2025)</p>
    </div>
</div>

@code {


    private async Task Logout()
    {
        await AuthService.Logout();
        NavigationManager.NavigateTo("/login");
    }
}