@page "/dataobjects"
@attribute [Authorize]
@using VAL.Client.DTOs
@using VAL.Client.Services
@inject IDataObjectService DataObjectService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IScreenLoadLogService ScreenLoadLogService
<PageTitle>Data Objects</PageTitle>
<div class="px-4 sm:px-6 lg:px-8 py-6">
    <!-- Header Section -->
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-slate-900 tracking-tight">Data Objects</h1>
        </div>
        <div class="mt-4 sm:mt-0">
            <button @onclick='() => NavigationManager.NavigateTo("dataobjects/create")' 
                    class="inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-indigo-600 to-purple-600 px-4 py-2.5 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 hover:shadow-indigo-500/50 hover:translate-y-[-1px] transition-all duration-200">
                <i class="fas fa-plus"></i>
                Create Data Object
            </button>
        </div>
    </div>

    <!-- Toolbar -->
    <div class="mb-6 bg-white rounded-xl shadow-sm border border-slate-200 p-4">
        <div class="flex flex-wrap items-center gap-3">
            <!-- Search -->
            <div class="flex-1 min-w-[200px]">
                <div class="relative">
                    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                        <i class="fas fa-search text-slate-400 text-sm"></i>
                    </div>
                    <input type="text" 
                           @bind="searchTerm" 
                           @bind:event="oninput"
                           placeholder="Search data objects..." 
                           class="block w-full rounded-lg border-slate-300 pl-10 pr-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500" />
                </div>
            </div>

            <!-- Show Columns Button -->
            <div class="relative">
                <button @onclick="ToggleColumnSelector" 
                        class="inline-flex items-center gap-2 rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 transition-colors">
                    <i class="fas fa-columns"></i>
                    Show Columns
                </button>

                @if (showColumnSelector)
                {
                    <div class="absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-xl bg-white shadow-xl ring-1 ring-black ring-opacity-5 focus:outline-none border border-slate-200">
                        <div class="p-3">
                            <div class="mb-2 px-2 py-1 text-xs font-semibold text-slate-500 uppercase tracking-wider">
                                Toggle Columns
                            </div>
                            @foreach (var col in columnVisibility)
                            {
                                <label class="flex items-center gap-2 px-2 py-2 hover:bg-slate-50 rounded-lg cursor-pointer transition-colors">
                                    <input type="checkbox" 
                                           checked="@col.Value" 
                                           @onchange="@(e => ToggleColumn(col.Key, (bool)e.Value!))"
                                           class="h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" />
                                    <span class="text-sm text-slate-700">@col.Key</span>
                                </label>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Export to Excel Button -->
            <button @onclick="ExportToExcel" 
                    disabled="@isExporting"
                    class="inline-flex items-center gap-2 rounded-lg border border-emerald-600 bg-emerald-600 px-4 py-2 text-sm font-medium text-white hover:bg-emerald-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                @if (isExporting)
                {
                    <svg class="animate-spin h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span>Exporting...</span>
                }
                else
                {
                    <i class="fas fa-file-excel"></i>
                    <span>Export to Excel</span>
                }
            </button>
        </div>
    </div>

    <!-- Data Grid -->
    <div class="bg-white rounded-xl shadow-lg shadow-slate-200/60 border border-slate-100 overflow-hidden">
        @if (loading)
        {
            <div class="flex items-center justify-center py-12">
                <div class="text-center">
                    <svg class="animate-spin h-10 w-10 text-indigo-600 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <p class="text-sm text-slate-500">Loading data objects...</p>
                </div>
            </div>
        }
        else if (errorMessage != null)
        {
            <div class="p-8">
                <div class="rounded-xl bg-red-50 border border-red-100 p-4 flex items-start gap-3">
                    <i class="fas fa-exclamation-circle text-red-400 text-xl mt-0.5"></i>
                    <div>
                        <h3 class="text-sm font-medium text-red-800">Error loading data</h3>
                        <p class="text-sm text-red-700 mt-1">@errorMessage</p>
                    </div>
                </div>
            </div>
        }
        else if (!FilteredDataObjects.Any())
        {
            <div class="text-center py-12">
                <i class="fas fa-inbox text-slate-300 text-5xl mb-4"></i>
                <h3 class="text-sm font-medium text-slate-900">No data objects found</h3>
                <p class="mt-1 text-sm text-slate-500">Get started by creating a new data object.</p>
                <div class="mt-6">
                    <button @onclick='() => NavigationManager.NavigateTo("dataobjects/create")' 
                            class="inline-flex items-center gap-2 rounded-xl bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-700 transition-colors">
                        <i class="fas fa-plus"></i>
                        Create Data Object
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-slate-50">
                        <tr>
                            @if (columnVisibility["Short Name"])
                            {
                                <th scope="col" @onclick='() => SortTable("ShortName")' class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-200 transition-colors select-none">
                                    <div class="flex items-center gap-1">
                                        Short Name
                                        @if (currentSortColumn == "ShortName")
                                        {
                                            <i class="fas @(isAscending ? "fa-sort-up" : "fa-sort-down") text-indigo-500"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort text-slate-300"></i>
                                        }
                                    </div>
                                </th>
                            }
                            @if (columnVisibility["Long Name"])
                            {
                                <th scope="col" @onclick='() => SortTable("LongName")' class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-200 transition-colors select-none">
                                    <div class="flex items-center gap-1">
                                        Long Name
                                        @if (currentSortColumn == "LongName")
                                        {
                                            <i class="fas @(isAscending ? "fa-sort-up" : "fa-sort-down") text-indigo-500"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort text-slate-300"></i>
                                        }
                                    </div>
                                </th>
                            }
                            @if (columnVisibility["Status"])
                            {
                                <th scope="col" @onclick='() => SortTable("Status")' class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-200 transition-colors select-none">
                                    <div class="flex items-center gap-1">
                                        Status
                                        @if (currentSortColumn == "Status")
                                        {
                                            <i class="fas @(isAscending ? "fa-sort-up" : "fa-sort-down") text-indigo-500"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort text-slate-300"></i>
                                        }
                                    </div>
                                </th>
                            }
                            @if (columnVisibility["GUID"])
                            {
                                <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">
                                    GUID
                                </th>
                            }
                            <th scope="col" class="px-6 py-3 text-right text-xs font-semibold text-slate-700 uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-slate-200">
                        @foreach (var item in FilteredDataObjects)
                        {
                            <tr class="hover:bg-slate-50 transition-colors">
                                @if (columnVisibility["Short Name"])
                                {
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-slate-900">@item.DataObjectShortName</div>
                                    </td>
                                }
                                @if (columnVisibility["Long Name"])
                                {
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-slate-900">@item.DataObjectLongName</div>
                                    </td>
                                }
                                @if (columnVisibility["Status"])
                                {
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (item.DataObjectActive)
                                        {
                                            <span class="inline-flex items-center gap-1.5 rounded-full bg-emerald-100 px-3 py-1 text-xs font-medium text-emerald-700">
                                                <span class="h-1.5 w-1.5 rounded-full bg-emerald-600"></span>
                                                Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center gap-1.5 rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-700">
                                                <span class="h-1.5 w-1.5 rounded-full bg-slate-600"></span>
                                                Inactive
                                            </span>
                                        }
                                    </td>
                                }
                                @if (columnVisibility["GUID"])
                                {
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-xs font-mono text-slate-500">@item.DataObjectGuid</div>
                                    </td>
                                }
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end gap-2">
                                        <button @onclick='() => NavigationManager.NavigateTo($"dataobjects/view/{item.DataObjectGuid}")' 
                                                class="text-slate-500 hover:text-slate-800 transition-colors p-2 hover:bg-slate-100 rounded-lg">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button @onclick='() => NavigationManager.NavigateTo($"dataobjects/edit/{item.DataObjectGuid}")' 
                                                class="text-indigo-600 hover:text-indigo-900 transition-colors p-2 hover:bg-indigo-50 rounded-lg">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button @onclick="() => DeleteDataObject(item.DataObjectGuid!.Value)" 
                                                class="text-red-600 hover:text-red-900 transition-colors p-2 hover:bg-red-50 rounded-lg">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination Info -->
            <div class="bg-slate-50 px-6 py-4 border-t border-slate-200">
                <div class="text-sm text-slate-700">
                    Showing <span class="font-medium">@FilteredDataObjects.Count()</span> of <span class="font-medium">@dataObjects.Count</span> results
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<DataObjectDto> dataObjects = new();
    private bool loading = true;
    private string? errorMessage;
    private string searchTerm = string.Empty;
    private bool showColumnSelector = false;
    private bool isExporting = false;

    private Dictionary<string, bool> columnVisibility = new()
    {
        { "Short Name", true },
        { "Long Name", true },
        { "Status", true },
        { "GUID", false }
    };

    private IEnumerable<DataObjectDto> FilteredDataObjects
    {
        get
        {
            var filtered = dataObjects.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var search = searchTerm.ToLower();
                filtered = filtered.Where(d =>
                    d.DataObjectShortName.ToLower().Contains(search) ||
                    d.DataObjectLongName.ToLower().Contains(search) ||
                    (d.DataObjectGuid?.ToString().ToLower().Contains(search) ?? false)
                );
            }

            // Apply Sort
            return currentSortColumn switch
            {
                "ShortName" => isAscending 
                    ? filtered.OrderBy(d => d.DataObjectShortName) 
                    : filtered.OrderByDescending(d => d.DataObjectShortName),
                "LongName" => isAscending 
                    ? filtered.OrderBy(d => d.DataObjectLongName) 
                    : filtered.OrderByDescending(d => d.DataObjectLongName),
                "Status" => isAscending 
                    ? filtered.OrderBy(d => d.DataObjectActive) 
                    : filtered.OrderByDescending(d => d.DataObjectActive),
                _ => filtered
            };
        }
    }

    private string currentSortColumn = "ShortName";
    private bool isAscending = true;

    private void SortTable(string columnName)
    {
        if (currentSortColumn == columnName)
        {
            isAscending = !isAscending;
        }
        else
        {
            currentSortColumn = columnName;
            isAscending = true;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        // Log screen load
        await ScreenLoadLogService.LogScreenLoadAsync("Data Objects", NavigationManager.Uri);
        
        await LoadDataObjects();
    }

    private async Task LoadDataObjects()
    {
        try
        {
            loading = true;
            errorMessage = null;
            dataObjects = await DataObjectService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data objects: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void ToggleColumnSelector()
    {
        showColumnSelector = !showColumnSelector;
    }

    private void ToggleColumn(string columnName, bool isVisible)
    {
        columnVisibility[columnName] = isVisible;
    }

    private async Task ExportToExcel()
    {
        try
        {
            isExporting = true;
            
            // Call the export endpoint
            var response = await DataObjectService.ExportToExcelAsync();
            
            // Trigger download using JavaScript
            await JSRuntime.InvokeVoidAsync("downloadFile", 
                "data:application/vnd.openxmlformats-officedocument.spreadsheetml.sheet;base64," + response, 
                $"DataObjects_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error exporting to Excel: {ex.Message}";
        }
        finally
        {
            isExporting = false;
        }
    }

    private async Task DeleteDataObject(Guid id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this data object?"))
        {
            try
            {
                await DataObjectService.DeleteAsync(id);
                await LoadDataObjects();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting data object: {ex.Message}";
            }
        }
    }
}
