@inherits LayoutComponentBase

<div class="flex h-screen overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- Sidebar -->
    <div class="hidden md:flex md:flex-shrink-0">
        <div class="flex flex-col w-72 shadow-2xl">
            <div class="flex flex-col h-full">
                <NavMenu />
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="flex flex-col w-0 flex-1 overflow-hidden">
        <!-- Top Navigation Bar -->
        <div class="relative z-10 flex-shrink-0 flex h-16 bg-white shadow-sm border-b border-gray-200">
            <div class="flex-1 px-4 flex justify-between items-center">
                <div class="flex-1 flex">
                    <!-- <h1 class="text-2xl font-semibold text-gray-800">Welcome Back</h1> -->
                </div>
                <div class="ml-4 flex items-center md:ml-6 space-x-4">
                    <AuthorizeView>
                        <Authorized>
                            <a href="profile"
                                class="text-sm font-medium text-gray-500 hover:text-indigo-600 transition-colors">
                                @context.User.Identity?.Name
                            </a>
                            <div class="h-6 w-px bg-gray-200 mx-2"></div>
                        </Authorized>
                    </AuthorizeView>
                    <!-- Notifications -->
                    <button
                        class="p-2 rounded-full text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                        <i class="fas fa-bell text-lg"></i>
                    </button>

                    <!-- Settings -->
                    <button
                        class="p-2 rounded-full text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                        <i class="fas fa-cog text-lg"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <main class="flex-1 relative overflow-y-auto focus:outline-none bg-gradient-to-br from-gray-50 to-white">
            <div class="animate-fade-in">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    @Body
                </div>
            </div>
        </main>

        <!-- Footer -->
        <div class="flex-shrink-0 bg-white border-t border-gray-200 px-4 py-3">
            <div class="flex items-center justify-between text-sm text-gray-500">
                <p>VBL System - Data Management Platform</p>
                <p>Version 1.0.0</p>
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.3s ease-out;
    }

    /* Custom scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #c7d2fe;
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #a5b4fc;
    }
</style>
